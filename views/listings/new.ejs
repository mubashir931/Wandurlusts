  <% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="mb-3" style="color: rgb(40, 164, 94)" id="create">
      Create a New Listing
    </h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
          
        />
        <div class="valid-feedback">Good Title !</div>
        <div class="invalid-feedback">Please enter a valid Title !</div>
</div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          class="form-control"
          rows="5"
          required
        ></textarea>
      

      <div class="mb-3">
        <lable for="image" class="form-label">Upload image</lable>
        <input name="image" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            name="listing[price]"
            placeholder="Ex: 4300/-"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price !</div>

          </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            name="listing[country]"
            placeholder="Ex: India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country !</div>
      </div>
      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          name="listing[location]"
          placeholder="Ex: Delhi"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid Location !</div>
      <button class="btn btn-dark add-btn mt-3 mb-4" class="mb-3">Add</button>
    </form>
  </div>
</div>